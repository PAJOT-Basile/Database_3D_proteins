as.data.frame()
ggplot(data = Number_of_sequences_per_family, aes(x = Family_name, y = Number_of_sequences)) +
geom_col() +
ggtitle(paste("Number of sequences per family for", order))
ggsave(paste0("Number of sequences per family for ", order, ".png"))
