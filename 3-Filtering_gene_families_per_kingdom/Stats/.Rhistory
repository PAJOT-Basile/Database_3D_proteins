Number_of_sequences_per_family_list_files <- list.files(path = "../", pattern = "_number_of_sequences_per_family.csv")
Number_of_sequences_per_family_list_files <- list.files(path = "../", pattern = "_number_of_sequences_per_family.csv")
for (file in Number_of_sequences_per_family_list_files){
order <- str_split_fixed(file, "_", 6)[1]
